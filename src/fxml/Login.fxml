<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController"
            prefWidth="400" prefHeight="450" style="-fx-background-color: #1e1e2f;">

    <VBox alignment="CENTER" spacing="20" layoutX="50" layoutY="50" prefWidth="300">
        
        <!-- LOGO SENAI -->
        <Label text="SENAI" style="-fx-text-fill: #E60000; -fx-font-size: 36px; -fx-font-weight: bold;" />

        <!-- Campos de login -->
        <TextField fx:id="txtUsername" promptText="Email" style="-fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" />
        <PasswordField fx:id="txtPassword" promptText="Senha" style="-fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" />

        <!-- Botões -->
        <Button fx:id="btnSignin" text="Entrar" prefWidth="200"
                style="-fx-background-color: #E60000; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12;" 
                onMouseClicked="#handleButtonAction"/>

        <Button fx:id="btnRegister" text="Cadastrar usuário" prefWidth="200"
                style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12;"
                onAction="#openRegister" />

        <!-- Label de erros -->
        <Label fx:id="lblErrors" textFill="red" />
    </VBox>
</AnchorPane>
